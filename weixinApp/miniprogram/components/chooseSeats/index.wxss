/* components/chooseSeats/index.wxss */

.img-h-cp {
  width: 90rpx;
  height: 40rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.map {
  position: absolute;
  transform: translateZ(0);
  top: 120rpx;
}

.willChange {
  will-change: transform;
}

.seat-img {
  /* width: 36rpx;
  height: 32rpx; */
  margin: 7rpx 4rpx;
}

.row {
  display: flex;
}

.wrap {
  height: 720rpx;
  background-color: #f0f0f0;
  position: relative;
  overflow: hidden;
}

.room {
  margin: 0 auto;
  width: 310rpx;
  border-top: 36rpx solid #dcdcdc;
  border-right: 6rpx solid transparent;
  border-bottom: 36rpx solid transparent;
  border-left: 6rpx solid transparent;
  text-align: center;
  font-size: 24rpx;
  font-weight: bold;
}

.columnN {
  margin-left: 15rpx;
  position: absolute;
  top: 140rpx;
  background-color: #c2c2c2;
  opacity: 0.8;
  z-index: 2;
  border-radius: 12rpx;
}

.roomL {
  margin-top: -30rpx;
  letter-spacing: 2rpx;
}

.columnNum {
  line-height: 50rpx;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  font-family: Geneva, Tahoma, sans-serif;
}

.centerTips {
  font-size: 22rpx;
  width: 100rpx;
  height: 34rpx;
  background-color: #e0e0e0;
  text-align: center;
  line-height: 34rpx;
  border-radius: 6rpx;
}

.buy {
  padding: 0 20rpx;
  border-top: 2rpx #c0c0c0 solid;
}

.seats-detail {
  height: 128rpx;
  border-bottom: 2rpx #e6e6e6 solid;
}

.seat-tips {
  font-size: 30rpx;
  margin-top: 16rpx;
  color: #666;
  font-weight: bold;
}

.seat-let {
  display: inline-block;
  font-size: 26rpx;
  color: #666;
  font-weight: bold;
  margin-right: 10rpx;
}

.seat-cancel {
 
  width: 18rpx;
  height: 2rpx;
  background: #ccc;
  line-height: 0;
  font-size: 0;
  vertical-align: middle;
  transform: rotate(45deg);
}

.seat-cancel:after {
  content: '/';
  display: inline-block;
  width: 28rpx;
  height: 4rpx;
  background: #ccc;
  transform: rotate(-90deg);
}
.seat-wrap{
  display: flex;
}


.seat-item {
  display: flex;
  width: 160rpx;
  height: 58rpx;
  border: 2rpx #ddd solid;
  border-radius: 8rpx;
  margin-top: 14rpx;
  margin-right: 8rpx;
  padding-left: 8rpx;
  align-items: center;
}

.confirm {
  display: flex;
  align-items: center;
  height: 100rpx;
}


.confirm-s {
  width: 300rpx;
  height: 78rpx;
  background-color: #f90;
  text-align: center;
  line-height: 78rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 10rpx;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
}

.total {
  flex: 1;
}

.totalprice {
  display: flex;
}

.price-s {
  font-size: 36rpx;
  color: #ef4238;
  font-weight: bold;
}

.price-y {
  font-size: 24rpx;
  color: #ef4238;
  margin-top: 8rpx;
}

.priceL {
  font-size: 24rpx;
  color: #999;
}
.plaseS{
  background-color: #FFD699;
}
.selectbutton {
  width: 150rpx;
  height:60rpx;
}
.selectcss {
  font-size: 35rpx;
  color: #fff;
  background: rgb(224, 166, 94);
  border-radius: 20rpx;
  text-align: center;
  margin-top: 5rpx;
  padding-top: 10rpx;
  margin-left: 2%;
  margin-right: 7%;
}

.scaleview{
  opacity:0.75;
  border: 1rpx #1d0202 solid;
  width: 230rpx;
  height: 155rpx;
  position: absolute;
  background: #8684846e;
  z-index: 3;
}
.samllmap {
  top: 10rpx;
}
.small-seat-img {
  margin: 1rpx 1rpx;
}
.smallrow {
  display: flex;
  height: 15rpx;
  margin-left:13rpx
}
.moveview {
  opacity:0.75;
  border: 1rpx #ef4238 solid;
  height: 123rpx;
  position: absolute;
  background: #8684846e;
  margin-top: 22rpx;
}